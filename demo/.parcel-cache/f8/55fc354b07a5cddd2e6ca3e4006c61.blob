html {
            box-sizing: border-box;
        }
        html * {
            box-sizing: inherit;
        }
        body {
            height: 2000px;
            margin: 0 auto;
            width: 960px;
            padding: 10px;
            background: #fafafa;
        }
        .observer {
            min-height: 260px;
            opacity: 0;
            transition: opacity 1s ease;
        }

        .is-intersected {
            opacity: 1;
        }

        img {
            max-width: 100%;
            height: auto;
            display: block;
        }

        .observers {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            grid-column-gap: 20px;
            grid-row-gap: 20px;
            margin-bottom: 100px;
        }